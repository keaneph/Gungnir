<Window x:Class="glaive.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gungnir - Login" Height="350" Width="400"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="Black">
    <Window.Resources>
        <!-- Style for the login button -->
        <Style x:Key="LoginButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#010100"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#333333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for TextBox in login -->
        <Style x:Key="LoginTextBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="250"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Black"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Style for PasswordBox in login -->
        <Style x:Key="LoginPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Width" Value="250"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Black"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Application Title -->
            <TextBlock Text="Gungnir" FontSize="24" FontWeight="Bold" Foreground="White" 
                 Margin="0,0,0,20" HorizontalAlignment="Center"/>
            <TextBlock Text="Login" FontSize="20" Foreground="Gray" HorizontalAlignment="Center"/>

            <!-- Username Field -->
            <StackPanel Orientation="Vertical" Margin="0,10,0,10">
                <TextBlock Text="Username" Foreground="White" Margin="5"/>
                <TextBox x:Name="UsernameTextBox" Style="{StaticResource LoginTextBoxStyle}"/>
            </StackPanel>

            <!-- Password Field -->
            <StackPanel Orientation="Vertical" Margin="0,10,0,10">
                <TextBlock Text="Password" Foreground="White" Margin="5"/>
                <PasswordBox x:Name="PasswordBox" Style="{StaticResource LoginPasswordBoxStyle}"/>
            </StackPanel>

            <!-- Login Button -->
            <Button x:Name="LoginButton" Content="Login" Style="{StaticResource LoginButtonStyle}" 
              Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
