<UserControl x:Class="glaive.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Border HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            Width="600" 
            CornerRadius="15" 
            Padding="30">
        
        <StackPanel>
            <!-- App Name/Logo -->
            <TextBlock Text="GUNGNIR"
                      Style="{StaticResource BaseTextBlockStyle}"
                      FontSize="48"
                      FontWeight="Bold"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,10"/>

            <!-- Subtitle -->
            <TextBlock Text="Student Information Sheet System"
                      Style="{StaticResource BaseTextBlockStyle}"
                      FontSize="20"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,5"/>

            <!-- Version -->
            <TextBlock Text="Version 1.0"
                      Style="{StaticResource BaseTextBlockStyle}"
                      FontSize="14"
                      Foreground="Gray"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,20"/>

            <!-- Description -->
            <TextBlock Style="{StaticResource BaseTextBlockStyle}"
                      TextWrapping="Wrap"
                      Margin="0,0,0,20"
                      TextAlignment="Center"
                      FontSize="14">
                A comprehensive Student Information Management System developed for CCC151 - 
                Computer Programming 3, designed to efficiently manage college records, 
                program information, and student data.
            </TextBlock>

            <!-- Two-Column Layout for Features and Technical Info -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column - Features -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0" HorizontalAlignment="Center">
                    <TextBlock Text="Key Features"
                              Style="{StaticResource BaseTextBlockStyle}"
                              FontWeight="Bold"
                              FontSize="16"
                              Margin="0,0,0,10"
                              TextAlignment="Center"/>

                    <TextBlock Style="{StaticResource BaseTextBlockStyle}"
                              FontSize="14"
                              TextWrapping="Wrap"
                              TextAlignment="Center">
                        College Management<LineBreak/>
                        Program Administration<LineBreak/>
                        Student Information Tracking<LineBreak/>
                        Data Export Capabilities
                    </TextBlock>
                </StackPanel>

                <!-- Right Column - Technical Info -->
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <TextBlock Text="Technical Details"
                              Style="{StaticResource BaseTextBlockStyle}"
                              FontWeight="Bold"
                              FontSize="16"
                              Margin="0,0,0,10"
                              TextAlignment="Center"/>

                    <TextBlock Style="{StaticResource BaseTextBlockStyle}"
                              FontSize="14"
                              TextWrapping="Wrap"
                              TextAlignment="Center">
                        WPF Application<LineBreak/>
                        .NET Framework<LineBreak/>
                        CSV Data Storage<LineBreak/>
                        XAML-based UI
                    </TextBlock>
                </StackPanel>
            </Grid>



            <!-- Copyright -->
            <TextBlock Text="2025 Keane Ledesma. All rights reserved."
                      Style="{StaticResource BaseTextBlockStyle}"
                      FontSize="12"
                      Foreground="Gray"
                      HorizontalAlignment="Center"/>
        </StackPanel>
    </Border>
</UserControl>