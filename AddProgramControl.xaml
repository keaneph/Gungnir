<UserControl x:Class="glaive.AddProgramControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:glaive"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Border HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Width="400" 
                CornerRadius="15" 
                Padding="0,10,0,15" 
                Opacity="0.95">

            <StackPanel Margin="20">
                <!-- Header -->
                <TextBlock Text="Add Program" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Style="{StaticResource BaseTextBlockStyle}"
                          Margin="0,10,0,0" 
                          HorizontalAlignment="Center"/>

                <!-- Program Name Field -->
                <StackPanel Orientation="Vertical" Margin="0,20,0,10">
                    <TextBlock Text="Program Name" 
                              Margin="40,0,0,0" 
                              Style="{StaticResource BaseTextBlockStyle}" 
                              HorizontalAlignment="Left"/>
                    <TextBox x:Name="ProgramNameTextBox" 
                            Style="{StaticResource BaseTextBoxStyle}"
                            Height="30"
                            PreviewTextInput="ProgramNameTextBox_PreviewTextInput"/>
                </StackPanel>

                <!-- Program Code Field -->
                <StackPanel Orientation="Vertical" Margin="0,10,0,10">
                    <TextBlock Text="Program Code" 
                              Margin="40,0,0,0" 
                              Style="{StaticResource BaseTextBlockStyle}" 
                              HorizontalAlignment="Left"/>
                    <TextBox x:Name="ProgramCodeTextBox" 
                            Style="{StaticResource BaseTextBoxStyle}"
                            Height="30"
                            PreviewTextInput="ProgramCodeTextBox_PreviewTextInput" 
                            TextChanged="ProgramCodeTextBox_TextChanged"/>
                </StackPanel>

                <!-- College Code Field -->
                <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                    <TextBlock Text="College Code" 
                              Margin="40,0,0,0" 
                              Style="{StaticResource BaseTextBlockStyle}" 
                              HorizontalAlignment="Left"/>
                    <ComboBox x:Name="CollegeCodeComboBox" 
                             Style="{StaticResource BaseComboBoxStyle}"/>
                </StackPanel>

                <!-- Add Button -->
                <Button Content="Add Program" 
                        x:Name="AddProgramButton" 
                        Click="AddProgramButton_Click"
                        Style="{StaticResource AddButtonStyle}"
                        Width="100" 
                        Height="25"
                        HorizontalAlignment="Right"
                        Margin="0,20,40,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>