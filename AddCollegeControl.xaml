<UserControl x:Class="glaive.Views.AddCollegeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:glaive"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#EEF3F5">
        <StackPanel Margin="20">
            <TextBlock Text="Add College" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="College Name:" FontWeight="Bold" Margin="0,5,0,5"/>
            <TextBox x:Name="CollegeNameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="College Code:" FontWeight="Bold" Margin="0,5,0,5"/>
            <TextBox x:Name="CollegeCodeTextBox" Margin="0,0,0,10"/>

            <Button Content="Add College" x:Name="AddCollegeButton" Click="AddCollegeButton_Click" Padding="10,5" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</UserControl>